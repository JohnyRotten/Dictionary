<Window x:Class="Dictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictionary"
        mc:Ignorable="d"
        Title="Dictionary" Height="350" Width="350">
    <DockPanel LastChildFill="True">
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <TextBox x:Name="SearchBox" Width="200" Height="30" Margin="5" />
        </WrapPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" ItemHeight="40" ItemWidth="150">
            <Button x:Name="LoadButton" Margin="5">Добавить данные</Button>
            <Button x:Name="SaveButton" Margin="5">Сохранить результат</Button>
        </WrapPanel>
        <ScrollViewer Padding="5">
            <StackPanel x:Name="WordList"></StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
